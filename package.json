{
  "name": "tripz-api",
  "version": "0.0.0",
  "description": "Serverless functions based API for Tripz",
  "scripts": {
    "dev": "netlify dev --no-open",
    "lint": "eslint --ext .ts",
    "format:check": "prettier --check \"**/*.{ts,json}\"",
    "format": "prettier --write \"**/*.{ts,json}\"",
    "test": "tsc && jasmine --config=./jasmine.json",
    "postinstall": "npm run lint && npm run format:check && npm run test",
    "prepare": "husky install"
  },
  "author": "Peter Kin",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@netlify/functions": "^2.4.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "nodemailer": "^6.9.7",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jasmine": "^5.1.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.1",
    "husky": "^8.0.3",
    "jasmine": "^5.1.0",
    "netlify-cli": "^17.10.1",
    "prettier": "^3.1.1"
  }
}
